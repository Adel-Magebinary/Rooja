<script src="/js/jquery.defaultvalue.js" type="text/javascript"></script> 
<script type="text/javascript">
(function ($) {
	
	var fadeDuration=2000;
	var slideDuration=4000;
	var currentIndex=1;
	var nextIndex=1;
	
	$(document).ready(function() {
		
		try {
		
			alert('init defaultValue');
			$('input[type="text"], input[type="password"]').defaultValue({
				preferPlaceholder: true
			});
			
		} catch (e) {
			alert(e.message);
			alert(e.fileName);
			alert(e.lineNumber);
		}
	
		alert('about to setTimeout for defaultValue');
		setTimeout(function() {
			// Chrome does not fire a change event when autofilling forms
			// To prevent weird overlap with defaultValue and Chrome autofill,
			// fire your own change event after 100 or so milliseconds
			alert('start of timeout');
			$('input[type="text"]').change();
			alert('end of timeout');
		}, 100);
		
		alert('init loginTab.click');
		$("a#loginTab").click(function () {
			alert('loginTab click');
			$("#getInvitedCont").hide();
			$("#loginCont").show();
			$("#loginTab").addClass('selected');
			$("#getInvitedTab").removeClass('selected');
			return false;
		});
		alert('init getInvitedTab.click');
		$("a#getInvitedTab").click(function () {
			alert('getInvitedTab click');
			$("#getInvitedCont").show();
			$("#loginCont").hide();
			$("#loginTab").removeClass('selected');
			$("#getInvitedTab").addClass('selected');
			return false;
		});
		
		$('ul.slideshow li').css({opacity: 0.0});
		$("'ul.slideshow li:nth-child("+nextIndex+")'").addClass('show').animate({opacity: 1.0}, fadeDuration);
		var timer = setInterval(function () {
			nextIndex = currentIndex+1;
			if(nextIndex > $('ul.slideshow li').length) {
				nextIndex = 1;
			}
			$("'ul.slideshow li:nth-child("+nextIndex+")'").addClass('show').animate({opacity: 1.0}, fadeDuration);
			$("'ul.slideshow li:nth-child("+currentIndex+")'").animate({opacity: 0.0}, fadeDuration).removeClass('show');
			currentIndex = nextIndex;
		},slideDuration);
	
	});
	
})(jQ);
</script>
