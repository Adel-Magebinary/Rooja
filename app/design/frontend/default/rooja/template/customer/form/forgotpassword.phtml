<script type="text/javascript">
(function ($) {
	
	var fadeDuration=2000;
	var slideDuration=4000;
	var currentIndex=1;
	var nextIndex=1;
	
	$(document).ready(function() {
		
		
		$('ul.slideshow li').fadeOut(0);
		$("'ul.slideshow li:nth-child("+nextIndex+")'").addClass('show').fadeIn(fadeDuration);
		var timer = setInterval(function () {
			nextIndex = currentIndex+1;
			if(nextIndex > $('ul.slideshow li').length) {
				nextIndex = 1;
			}
			$("'ul.slideshow li:nth-child("+nextIndex+")'").addClass('show').fadeIn(fadeDuration);
			$("'ul.slideshow li:nth-child("+currentIndex+")'").fadeOut(fadeDuration).removeClass('show');
			currentIndex = nextIndex;
		},slideDuration);
	
	});
	
})(jQ);
</script>
